@model JeffMVC.Models.ResourceEvent

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>ResourceEvent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EventDate" class="control-label"></label>
                <input asp-for="EventDate" class="form-control" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>
			<div class="form-group">
				@Html.DisplayNameFor(m => m.ResourceId)
				@Html.DropDownListFor(m => m.ResourceId,
									  (IEnumerable<SelectListItem>)ViewBag.resourcelist,
									 "Select Resource",
									 new { @class = "form-control" })
				<span asp-validation-for="ResourceId" class="text-danger"></span>
			</div>
			<div class="form-group">
				@Html.DisplayNameFor(m => m.PersonId)
				@Html.DropDownListFor(m => m.PersonId,
										  (IEnumerable<SelectListItem>)ViewBag.personlist,
									"Select Person",
									 new { @class = "form-control" })
				<span asp-validation-for="PersonId" class="text-danger"></span>
			</div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

