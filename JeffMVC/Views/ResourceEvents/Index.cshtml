@using JeffMVC.Models;
@model IEnumerable<ResourceEvent>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<form action="/ResourceEvents/Index" method="post">
	<fieldset>
		<div class="resourceevent-menu">
			@Html.DropDownList("monthid",
				(IEnumerable<SelectListItem>)ViewBag.monthlist,
			"Select Month",
				new { @class = "form-control" })
		</div>
		<button type="submit">Submit</button>
	</fieldset>
</form>



<div class="resourceevent-menu">
	<a asp-action="Create">Add Event</a>
</div>
<div class="resourceevent-menu">
	<a asp-controller="Resources" asp-action="Create">Add Resource</a>
</div>
<div class="resourceevent-menu">
	<a asp-controller="People" asp-action="Create">Add Person</a>
</div>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.EventDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Resource)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Person)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.EventDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Resource.ResourceTitle)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Person.Name)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
