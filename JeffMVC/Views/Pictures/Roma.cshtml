@using JeffMVC.Models
@model PicturesAndWeatherContext
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Roma";
}

<div class="row">
	<div class="col-md-6">
		<h1>@Model.Pictures.ToList()[1].Name - @Model.Pictures.ToList()[1].Year</h1>
	</div>
</div>
<div class="row">
	<div class="col-md-6">
		@foreach (var item in Model.Pictures.ToList()[1].Path)
		{
			<img src="@Url.Content(item)" class="picture" />
		}
	</div>
	<div class="coll-md-6">
		@await Html.PartialAsync("GetWeather", Model.Forecasts)
	</div>
</div>
